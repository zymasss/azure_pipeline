
-- Création dans le schéma de base

CREATE TABLE dbo.ligue1_silver (
    hometeam NVARCHAR(100),
    awayteam NVARCHAR(100),
    hthg INT,
    htag INT
);

CREATE USER Rosse FOR LOGIN Rosse;

SELECT name 
FROM sys.database_principals 
WHERE type = 'S'; -- user

SELECT name, type_desc 
FROM sys.database_principals
WHERE name = 'Rosse';

-- Donner les droits

GRANT SELECT ON DATABASE::[sql_dedicated_pool] TO Rosse;
GRANT INSERT, UPDATE, DELETE ON DATABASE::[sql_dedicated_pool] TO Rosse;

GRANT CONTROL ON DATABASE::[sql_dedicated_pool] TO Rosse;

-- Exécution de la pipeline (-> table complète)

SELECT * FROM dbo.ligue1_silver;

SELECT COLUMN_NAME 
FROM INFORMATION_SCHEMA.COLUMNS 
WHERE TABLE_NAME = 'ligue1_silver';


master bdd -> CREATE LOGIN Rosse WITH PASSWORD = '*********';
